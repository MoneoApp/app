<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catalog_item_image_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/background_item"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/catalog_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_remote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/catalog_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/catalog_item"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/catalog_item_image_background"
        app:layout_constraintStart_toStartOf="@+id/catalog_item_image_background"
        app:layout_constraintTop_toBottomOf="@+id/catalog_item_image_background" />

</androidx.constraintlayout.widget.ConstraintLayout>